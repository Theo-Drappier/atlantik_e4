{% extends 'others/layout.html.twig' %}

{% block title %}Traversée {{ crossing.id }}{% endblock %}

{% block contentheader %}

{% endblock %}

{% block contentmain %}
    <div class="row">
        <div class="col-md-4">
            <div class="box">
                <div class="box-header">
                    <h1 class="box-title">{{ crossing.link.startingHarbor.name }} &rarr; {{ crossing.link.arrivalHarbor.name }} <small>Traversée</small></h1>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Date de départ : </strong>{{ crossing.date }}
                        </div>
                        <div class="col-md-6">
                            <strong>Heure de départ : </strong>{{ crossing.timeStart }}
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                <strong>Nom du bateau : </strong>{{ crossing.boat.name }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Nombre de passager max : </strong>{{ passenger }}
                            </div>
                            <div class="col-md-6">
                                <strong>Nombre de véhicules max : </strong>{{ vehicle }}
                            </div>
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box">
                <div class="box-header">
                    <h1 class="box-title">Réservation</h1>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}