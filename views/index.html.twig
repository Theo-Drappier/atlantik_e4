{% extends 'others/layout.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block contentheader %}
    <h1>Recherche de traversées</h1>
{% endblock %}

{% block contentmain %}
    <div class="row">
        <div class="col-md-3">
            <div class="box box-primary">
                <div class="box-header">
                    <h2 class="box-title">Recherche de traversées</h2>
                </div>
                <div class="box-body">
                    <form method="post" action="search_crossing">
                        {% if error == 401 %}
                            <div class="form-group">
                                <label class="error">Veuillez entrer une date et une heure</label>
                            </div>
                        {% endif %}
                        {% if error == 402 %}
                            <div class="form-group">
                                <label class="error">Veuillez respecter le format de la date</label>
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <label>Date :</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input class="form-control" placeholder="dd/mm/yyyy" type="text" name="date"
                                               maxlength="10"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Heure souhaitée :</label>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                        <input class="form-control" placeholder="hh" type="text" name="hour"
                                               maxlength="2"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Lien</label>
                            <div class="row">
                                <div class="col-md-12">
                                    <select class="form-control" name="link">
                                        <option value="unselected" selected>---</option>
                                        {% for link in links %}
                                            <option value="{{ link.id }}">{{ link.startingHarbor.name }} &rarr; {{ link.arrivalHarbor.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}